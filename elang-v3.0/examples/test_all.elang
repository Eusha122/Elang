$$ --- 1. Array Literals & Indexing ---
say("=== Arrays ===").newl
nums = [1, 2, 3, 4]
say(nums).newl

$$ Indexing
say("First: ").space
say(nums[0]).newl
say("Last: ").space
say(nums[3]).newl

$$ Index assignment
nums[1] = 99
say("After nums[1] = 99: ").space
say(nums).newl

$$ --- 2. Array Methods ---
say("").newl
say("=== Array Methods ===").newl
nums = [1, 2, 3, 4]
nums.push(5)
say("After push(5): ").space
say(nums).newl

popped = nums.pop()
say("Popped: ").space
say(popped).newl
say("After pop: ").space
say(nums).newl

say("Length: ").space
say(len(nums)).newl

say("Sum: ").space
say(nums.sum()).newl
say("Max: ").space
say(nums.max()).newl
say("Min: ").space
say(nums.min()).newl

unsorted = [4, 1, 3, 2]
unsorted.sort()
say("Sorted: ").space
say(unsorted).newl

unsorted.reverse()
say("Reversed: ").space
say(unsorted).newl

$$ --- 3. String Methods ---
say("").newl
say("=== String Methods ===").newl
name = "  Eusha Language  "
say("Original: '" + name + "'").newl
say("Length: ").space
say(name.length()).newl
say("Upper: ").space
say(name.upper()).newl
say("Lower: ").space
say(name.lower()).newl
say("Trimmed: '" + name.trim() + "'").newl
say("Contains 'usha': ").space
say(name.contains("usha")).newl
say("Contains 'xyz': ").space
say(name.contains("xyz")).newl

$$ --- 4. Break & Continue ---
say("").newl
say("=== Break & Continue ===").newl
say("Break at 3: ").space
for (i in 1..5) {
    if i == 3 {
        break
    }
    say(i).space
}
say("").newl

say("Skip 3: ").space
for (i in 1..5) {
    if i == 3 {
        continue
    }
    say(i).space
}
say("").newl

$$ --- 5. Lambdas ---
say("").newl
say("=== Lambdas ===").newl
nums = [1, 2, 3, 4, 5, 6]
evens = nums.filter(x => x % 2 == 0)
say("Evens: ").space
say(evens).newl

doubled = nums.map(x => x * 2)
say("Doubled: ").space
say(doubled).newl

$$ --- 6. Module System ---
say("").newl
say("=== Modules ===").newl
use math
say("PI: ").space
say(math.pi).newl
say("sqrt(25): ").space
say(math.sqrt(25)).newl
say("floor(3.7): ").space
say(math.floor(3.7)).newl

$$ --- 7. Help System ---
say("").newl
say("=== Help System ===").newl
help("for")

$$ --- Done ---
say("").newl
say("All tests passed!").newl
